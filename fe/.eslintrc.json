{
	"env": {
		"browser": true,
		"es2021": true
	},
	"globals": {
		"process": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:react-hooks/recommended"
	],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {
		  "modules": true
		}
	},
	"plugins": [
		"react",
		"react-hooks"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": "off",
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"react/jsx-filename-extension": [1, {
			"extensions": [
				".js",
				".jsx"
			]
		}],
		"react/react-in-jsx-scope": "off",
		"react-hooks/rules-of-hooks": "error",
		"react-hooks/exhaustive-deps": "warn",
		"no-empty": ["error", { "allowEmptyCatch": true }]
	}
}
